{
	"$schema": "http://json-schema.org/schema#",
	"id": "https://github.com/mogikanen9/json-schema-validation-experiments/schemas/message.json",
	"title": "Message with Healthcare Data",	
	"definitions": {
		"SendingFacility": {
			"type": "object",
			"properties": {
				"identifier": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9_]*$",
					"minLength": 2
				},
				"name": {
					"type": "string"
				}
			},
			"required": [
				"identifier"
			]
		},
		"MessageHeader": {
			"type": "object",
			"properties": {
				"sendingFacility": {
					"$ref": "#/definitions/SendingFacility"
				},
				"endPoint": {
					"type": "string"
				}
			},
			"required": [
				"sendingFacility",
				"endPoint"
			]
		}
	},
	"type": "object",
	"properties": {
		"messageHeader": {
			"$ref": "#/definitions/MessageHeader"
		}
	},
	"required": [
		"messageHeader"
	]
}