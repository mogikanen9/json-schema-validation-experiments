{
	"$schema": "http://json-schema.org/schema#",
	"id": "https://raw.githubusercontent.com/mogikanen9/json-schema-validation-experiments/basic-validation-with-everit-org/schemas/message-header.json",
	"title": "Header of a message with Healthcare Data",
	"type": "object",
	"definitions": {
		"SendingFacility": {
			"type": "object",
			"properties": {
				"identifier": {
					"type": "string",
					"pattern": "^[a-zA-Z0-9_]*$",
					"minLength": 1,
					"maxLength": 20
				},
				"name": {
					"type": "string",
					"minLength": 1,
					"maxLength": 20
				}
			},
			"required": [
				"identifier"
			]
		},
		"MessageHeader": {
			"properties": {
				"sendingFacility": {
					"$ref": "#/definitions/SendingFacility"
				},
				"endPoint": {
					"type": "string"
				},
				"dateTimeOfMessage": {
					"type": "string",
					"maxLength": 26
				},
				"messageType": {
					"type": "string",
					"maxLength": 15
				},
				"messageControlId": {
					"type": "string",
					"maxLength": 20
				}
			},
			"required": [
				"sendingFacility",
				"dateTimeOfMessage",
				"messageType"
			]
		}
	}
}